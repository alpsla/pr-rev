{
    "compilerOptions": {
      "outDir": "dist",          // Specify output directory for compiled files
      "rootDir": "src",          // Specify the root directory for source files
      "declaration": true,       // Emit declaration files
      "strict": true,            // Enable strict mode
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": ["src/**/*"],      // Include all files in the src directory
    "exclude": ["node_modules", "dist", "coverage", "*.config.js", "*.config.mjs"] // Exclude unnecessary files
  }
  