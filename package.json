{
  "name": "pr-rev",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=web...",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "prisma": "^6.0.1",
    "ts-jest": "^29.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*",
    "packages/config",
    "packages/core",
    "packages/types",
    "packages/ui"
  ],
  "dependencies": {
    "@octokit/rest": "21.0.2",
    "@prisma/client": "^6.0.1",
    "next": "14.0.4"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pr-rev/*": [
        "packages/*/src"
      ]
    }
  }
}
