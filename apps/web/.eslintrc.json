{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "@typescript-eslint/no-namespace": ["error", { "allowDeclarations": true }],
    "@typescript-eslint/no-explicit-any": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.ts", "**/__tests__/**/*.tsx"],
      "rules": {
        "@typescript-eslint/no-namespace": "off"
      }
    }
  ]
}
